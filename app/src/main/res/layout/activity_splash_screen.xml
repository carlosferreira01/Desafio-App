<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_splashScreen_default">

    <ImageView
        android:id="@+id/mImgLogo"
        android:layout_width="@dimen/splash_screen_image_view_logo_size_width_height"
        android:layout_height="@dimen/splash_screen_image_view_logo_size_width_height"
        android:layout_marginBottom="@dimen/splash_screen_image_view_bottom_size_height"
        app:layout_constraintBottom_toTopOf="@+id/container_progressbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_icon" />


    <include
        android:id="@+id/container_progressbar"
        layout="@layout/layout_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/progressbar_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>